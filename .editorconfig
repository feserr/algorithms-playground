root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{c,h,cpp,hpp,py}]
charset = utf-8

[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
